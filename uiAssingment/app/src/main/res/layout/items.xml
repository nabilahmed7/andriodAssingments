<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:background="#957A1616"
    android:elevation="12dp"
    android:layout_marginTop="10dp"
    android:id="@+id/cardView">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_card"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:padding="20dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView_card"
            android:padding="2dp"
            android:text="Staff Software Engineer - Remote"
            android:textColor="#E82D99E1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_companyName"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_toEndOf="@+id/imageView_card"
            android:padding="2dp"
            android:text="Pismo"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_location"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_companyName"
            android:layout_toEndOf="@+id/imageView_card"
            android:padding="2dp"
            android:text="San Francisco, CA"
            android:textColor="#6F000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_name"
            android:backgroundTint="@color/white"
            android:outlineProvider="none"

            app:icon="@drawable/ic_outline_favorite_border_24"
            app:iconGravity="end"
            app:iconTint="#676161" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_save"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/item_location"
            android:gravity="center"
            android:text="6d"
            android:textColor="#A3323639"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_salary"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_location"
            android:layout_toEndOf="@+id/imageView_card"
            android:padding="2dp"
            android:text="$147K-166K (Glassdoor Est.)"
            android:textColor="#E866983B"
            android:textSize="12sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
